#! shell: /bin/bash
#! timeout: 60s

TEST "interrupt with non-existent kernel ID fails"
RUN runt interrupt 00000000-0000-0000-0000-000000000000
ASSERT exit_code != 0
ASSERT stderr contains "No such file"

TEST "interrupt with invalid UUID format fails"
RUN runt interrupt not-a-valid-uuid
ASSERT exit_code != 0
ASSERT stderr contains "No such file"

TEST "interrupt with empty ID shows help"
RUN runt interrupt
ASSERT exit_code != 0
ASSERT stderr contains "required"

TEST "interrupt help displays usage information"
RUN runt interrupt --help
ASSERT exit_code == 0
ASSERT stdout contains "id"
ASSERT stdout contains "kernel"
